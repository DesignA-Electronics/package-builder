BASE=$(pwd)
PACKAGE_DIR=${PACKAGE_DIR:-${BASE}/packages}
STAGING=${BASE}/staging
BUILD_DIR=${BASE}/build
SUPPORT_FILES=${BASE}/support_files

TOOLCHAIN_DIR=/tools/arm/arm-2010q1
CROSS=arm-none-linux-gnueabi-
HOST=arm-none-linux-gnueabi
ARCH=${ARCH:-arm}
CFLAGS="-march=armv4t -I${STAGING}/include"
LDFLAGS="-L${STAGING}/lib"

export PATH=${TOOLCHAIN_DIR}/bin:$PATH
