VERSION=7.2.1
SOURCE=http://lcp.nrl.navy.mil/nuttcp/beta/nuttcp-${VERSION}.c

if [ ! -d nuttcp-${VERSION} ] ; then
    mkdir nuttcp-${VERSION}
fi
cd nuttcp-${VERSION}
download "${SOURCE}"

${CROSS}gcc nuttcp-${VERSION}.c -o nuttcp -g -Wall -pipe

mkdir "$1"/bin
cp nuttcp "$1"/bin

build_package "${NAME}" "${VERSION}" "$1"
