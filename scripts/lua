VERSION=5.2.1
SOURCE=http://www.lua.org/ftp/lua-${VERSION}.tar.gz

download_unpack "$SOURCE"
make PLAT=linux CC=${CROSS}gcc CFLAGS="${CFLAGS} -O2 -Wall" LIBS="${LDFLAGS} -lm"
make pc INSTALL_TOP="${STAGING}" > lua.pc
cat >> lua.pc << EOF

Name: Lua
Description: Lua language engine
Version: ${version}
Libs: -L${libdir} -llua
Cflags: -I${includedir}
EOF

make install INSTALL_TOP="$1"
mkdir -p "$1"/lib/pkgconfig
cp lua.pc "$1"/lib/pkgconfig
build_generic_package "$1"

