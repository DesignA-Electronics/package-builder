#!/bin/sh

NAME=sdl-framebuffer
VERSION=1.2.14
SOURCE=http://www.libsdl.org/release/SDL-$VERSION.tar.gz
CONFIGURE_PARAMS="--disable-video-x11 --enable-video-fbcon \
        --enable-pthreads --enable-alsa --enable-input-tslib \
        --disable-pulseaudio --disable-esd --disable-video-directfb \
        --disable-dga"
BUILD_LIBRARY=1

post_install() {
    sed -i "s#/usr/local/lib/libts.la#${STAGING}/lib/libts.la#" "$1"/lib/libSDL.la
}

do_generic "$1"

